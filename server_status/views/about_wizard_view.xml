<odoo>
    <record id="view_about_wizard_form" model="ir.ui.view">
        <field name="name">about.wizard.form</field>
        <field name="model">about.wizard</field>
        <field name="arch" type="xml">
            <form string="Acerca de Odoo" create="false" edit="false">
                <sheet>
                    <field name="about_text" nolabel="1" readonly="1"/>
                </sheet>
                <footer>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_about_wizard" model="ir.actions.act_window">
        <field name="name">Acerca de Odoo</field>
        <field name="res_model">about.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
